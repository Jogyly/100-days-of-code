{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "parser": "typescript-eslint-parser",
    "plugins": [
        "react",
        "typescript"
    ],
    "rules": {
        "react/jsx-uses-vars": [2],
        "no-unused-vars": "off",
        "quotes": ["error", "double", { "avoidEscape": true }],
        "no-console": "off"
    }
}